@model SubmitCheckBoxListDemo.Models.ImageModel
@{
    var id = Guid.NewGuid().ToString();
}
<div class="form-group">
    <div id="div_@(id)" role="button" tabindex="0" class="btn btn-secondary">ファイルを選択</div>
    <input id="input_@(id)" type="file" asp-for="FormFile" style="display: none;" />
    <input type="hidden" asp-for="TempImageName" value="@Model?.TempImageName">
    <img src="@Model?.Src" alt="@Model?.Alt" style="; display: block; width: 400px" class="mt-2">
    <span asp-validation-for="FormFile" class="text-danger"></span>
    <script>
        initImageUploader('@id');
    </script>
</div>